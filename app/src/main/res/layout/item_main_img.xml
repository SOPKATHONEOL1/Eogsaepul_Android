<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_box_round"
    android:elevation="10dp"
    android:layout_marginBottom="16dp">


    <ImageView
        android:id="@+id/iv_main_img"
        android:layout_width="312dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_image_round"
        android:scaleType="fitStart"
        android:src="@mipmap/ic_launcher"

        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:text="이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀이미지 타이틀"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_main_img"
        app:layout_constraintStart_toStartOf="@id/iv_main_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_main_img"
        />

</androidx.constraintlayout.widget.ConstraintLayout>